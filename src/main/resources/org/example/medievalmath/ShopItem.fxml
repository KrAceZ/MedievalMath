               <ImageView fitHeight="120" fitWidth="120">
                  <image>
                      <Image url="@Sword.png" />
                  </image>
               </ImageView>
           </graphic>
         <effect>
            <SepiaTone level="0.4">
               <input>
                  <InnerShadow />
               </input></SepiaTone>
         </effect>
         <font>
            <Font name="the rum is gone" size="24.0" />
