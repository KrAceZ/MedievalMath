<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.medievalmath.ShopItemController">
   <children>
   
       <ImageView fx:id="ShopPageBackgroundView" fitHeight="794" fitWidth="1123" preserveRatio="true" />
   
       <!-- Buttons -->
       <Button layoutX="66.0" layoutY="60.0" onAction="#handleButtonShopClick" style="-fx-background-color: lightyellow;" text="Click to Shop">
         <font>
            <Font name="the rum is gone" size="13.0" />
         </font>
         <effect>
            <InnerShadow />
         </effect></Button>
       <Button layoutX="928.0" layoutY="659.0" onAction="#handleButtonCheckOutClick" prefHeight="40" prefWidth="120" style="-fx-background-color: lightyellow;" text="CheckOut">
         <font>
            <Font name="the rum is gone" size="13.0" />
         </font>
         <effect>
            <InnerShadow />
         </effect></Button>
   
       <!-- Button that will take back to homepage -->
       <Button layoutX="833.0" layoutY="51.0" mnemonicParsing="false" onAction="#navigateToHomePage" prefHeight="47.0" prefWidth="183.0" text="Home">
