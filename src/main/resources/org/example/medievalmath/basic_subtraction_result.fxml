<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="794.0" prefWidth="1123.0"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.medievalmath.BasicSubtractionResultController">

    <!-- Background image -->
    <ImageView fx:id="backgroundImageView" fitHeight="794" fitWidth="1123" preserveRatio="false">
        <image>
            <Image url="@Background.png" />
        </image>
    </ImageView>

    <children>
        <Label fx:id="resultTitle" layoutX="500.0" layoutY="200.0" text="Result">
            <font>
                <Font name="the rum is gone" size="38.0" />
            </font>
        </Label>
        <Label fx:id="remark" alignment="CENTER" contentDisplay="CENTER" layoutX="370.0" layoutY="230.0" prefHeight="48.0" prefWidth="502.0" text="Good work! Here's how many questions you answered correctly:" textAlignment="CENTER" wrapText="true">
            <font>
                <Font name="the rum is gone" size="18.0" />
            </font>
        </Label>
        <Label fx:id="score" alignment="CENTER" contentDisplay="CENTER" layoutX="250.0" layoutY="350.0" prefHeight="130.0" prefWidth="130.0" style="-fx-background-color: skyblue; -fx-background-radius: 16; -fx-border-radius: 16;" text="10/10" textFill="#0614a9" wrapText="true">
            <font>
                <Font name="the rum is gone" size="30.0" />
            </font>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </Label>
        <ProgressIndicator fx:id="correctProgress" layoutX="850.0" layoutY="350.0" minHeight="130.0" minWidth="130.0" prefHeight="57.0" prefWidth="93.0" progress="0.8" style="-fx-background-color: lightgreen; -fx-progress-color: green; -fx-font-weight: 900; -fx-font-size: 16; -fx-background-radius: 16; -fx-border-radius: 16; -fx-box-border: green;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ProgressIndicator>
        <ProgressIndicator fx:id="wrongProgress" layoutX="550.0" layoutY="350.0" minHeight="130.0" minWidth="130.0" prefHeight="57.0" prefWidth="93.0" progress="0.2" style="-fx-background-color: pink; -fx-progress-color: red; -fx-font-weight: 900; -fx-font-size: 16; -fx-background-radius: 16; -fx-border-radius: 16; -fx-box-border: red;">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ProgressIndicator>
        <Label fx:id="scoreText" alignment="CENTER" layoutX="200.0" layoutY="500.0" text="9 Points Out of 10" textFill="#0614a9">
            <font>
                <Font name="the rum is gone" size="18.0" />
            </font>
        </Label>
        <Label fx:id="correctText" alignment="CENTER" layoutX="825.0" layoutY="500.0" text="8 Answers Correct" textFill="GREEN">
            <font>
                <Font name="the rum is gone" size="15.0" />
            </font>
        </Label>
        <Label fx:id="wrongText" alignment="CENTER" layoutX="490.0" layoutY="500.0" text="2 Answers Wrong" textFill="RED">
            <font>
                <Font name="the rum is gone" size="15.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
