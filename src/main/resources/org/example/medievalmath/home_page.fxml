<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.medievalmath.HomePageController">
    <!-- Background image -->
    <ImageView fx:id="backgroundImageView" fitWidth="600" preserveRatio="true">
        <image>
            <Image url="@Background.png" />
        </image></ImageView>

    <!-- Container for buttons -->
    <AnchorPane fx:id="buttonsContainer" prefHeight="380.0" prefWidth="600.0">
        <Button alignment="CENTER" layoutX="72.0" layoutY="121.0" onAction="#navigateToLevelsPage" text="Levels" AnchorPane.leftAnchor="72.0" />
        <Button alignment="CENTER" layoutX="470.0" layoutY="121.0" onAction="#navigateToProfilePage" text="Profile" AnchorPane.leftAnchor="470.0" />
        <Button alignment="CENTER" layoutX="231.0" layoutY="121.0" onAction="#navigateToQuizzesPage" text="Quizzes" AnchorPane.leftAnchor="231.0" />
        <Button alignment="CENTER" layoutX="393.0" layoutY="121.0" onAction="#navigateToShopPage" text="Shop" AnchorPane.leftAnchor="393.0" />
        <Button alignment="CENTER" layoutX="308.0" layoutY="121.0" onAction="#navigateToTrophiesPage" text="Trophies" AnchorPane.leftAnchor="308.0" />
        <Button alignment="CENTER" layoutX="150.0" layoutY="121.0" onAction="#navigateToBasicAdditionPage" text="Basic Addition" AnchorPane.leftAnchor="150.0" />
        <Button layoutX="520.0" layoutY="49.0" mnemonicParsing="false" text="Exit" />
    </AnchorPane>

</AnchorPane>

