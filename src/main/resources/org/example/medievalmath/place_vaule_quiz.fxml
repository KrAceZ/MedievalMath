<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.medievalmath.PlaceValueProblemsController">
    <children>
        <!-- Background image -->
        <ImageView fx:id="backgroundImageView" fitHeight="650" fitWidth="650" preserveRatio="false">
            <image>
                <Image url="@ScrollBackground.png" />
            </image>
        </ImageView>

        <!-- Define the layout of the quiz interface here -->

        <Label fx:id="question" alignment="CENTER" contentDisplay="CENTER" layoutX="127.0" layoutY="92.0" prefHeight="109.0" prefWidth="397.0" style="-fx-background-color: white;" text="" wrapText="false">
            <font>
                <Font name="the rum is gone" size="18.0" />
            </font>
            <effect>
                <InnerShadow />
            </effect>
        </Label>
        <Button fx:id="option1" layoutX="227.0" layoutY="268.0" mnemonicParsing="false" onAction="#optionClicked" prefHeight="71.0" prefWidth="196.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="" textFill="WHITE">
            <font>
                <Font name="the rum is gone" size="24.0" />
            </font>
            <effect>
                <InnerShadow />
            </effect>
        </Button>
        <Button fx:id="option2" layoutX="227.0" layoutY="372.0" mnemonicParsing="false" onAction="#optionClicked" prefHeight="71.0" prefWidth="196.0" style="-fx-background-radius: 10; -fx-border-radius: 10;" text="" textFill="WHITE">
            <font>
                <Font name="the rum is gone" size="24.0" />
            </font>
            <effect>
                <InnerShadow />
            </effect>
        </Button>
        <!-- Empty Region for spacing at bottom-->
        <Region prefHeight="50.0" AnchorPane.bottomAnchor="50.0" />
    </children>
</AnchorPane>
